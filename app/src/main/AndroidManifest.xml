    package="com.example.samuelhimself.agent">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/digital_bikes2"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name=".MainActivity"
            android:label="Digital Bikes Agent"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bikeBalancing"
            android:label="Bike Balancing"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mapParkings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".confirmRequests"
            android:label="Confirm Requests"
            android:screenOrientation="portrait" />
        <activity
            android:name=".revenue"
            android:label="My Revenue"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile"
            android:label="Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LOGIN"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SPLASH1"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".bicyclesIn"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bicyclesOut"
            android:screenOrientation="portrait" />
        <activity
            android:name=".returnBike"
            android:label="Bike Return"
            android:screenOrientation="portrait" />
        <activity android:name=".finesOfUsers" />
        <activity android:name=".finalReg" />
        <activity android:name=".saving" />
        <activity
            android:name=".messages"
            android:label="My Messages" />
